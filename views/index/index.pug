extends ../shared/layout.pug

block content
  h1= title

  script.
    function checkInput() {
      if(document.getElementById('newPass').value !== document.getElementById('newRePass').value) {
        alert('Password and retyped new password are not the same');
        return false;
      }

      return true;
    }

  form(action='/login' method='post' class='form-horizontal' role='form')
    fieldset
      h2 Login
      div(class='form-group')
        label(class='control-label col-sm-2' for='username') Username
        div(class="col-sm-5")
          input(
            class='form-control'
            type='text'
            name='username'
            placeholder='Username'
            required
          )

      div(class='form-group')
        label(class='control-label col-sm-2' for='password') Password
        div(class="col-sm-5")
          input(
            class='form-control'
            type='password'
            name='password'
            placeholder='Password'
            required
          )

      div(class='form-group')
        div(class='col-sm-offset-2 col-sm-10')
          input(
            type='submit'
            value='Submit'
            class='btn btn-default'
          )

  form(action='/signup' method='post' class='form-horizontal' role='form')
    fieldset
      h2 Signup

      div(class='form-group')
        label(class='control-label col-sm-2' for='username') Username *
        div(class="col-sm-5")
          input(type='radio' name='role' value='Manager' checked required)
          | Manager

          br

          input(type='radio' name='role' value='Clerk' required)
          | Clerk

      div(class='form-group')
        label(class='control-label col-sm-2' for='newPass') Password *
        div(class="col-sm-5")
          input(
            class='form-control'
            type='password'
            name='passwordinput'
            id='newPass'
            placeholder='password'
            required
          )

      div(class='form-group')
        label(class='control-label col-sm-2' for='newRePass') Re-type password *
        div(class="col-sm-5")
          input(
            class='form-control'
            type='password'
            name='retypepassword'
            id='newRePass'
            placeholder='re-type password'
            required
          )

      br

      div(class='form-group')
        label(class='control-label col-sm-2' for='email') Email *
        div(class="col-sm-5")
          input(
            class='form-control'
            type='email'
            name='emailinput'
            id='email'
            placeholder='recovery email'
            required
          )

      div(class='form-group')
        div(class='col-sm-offset-2 col-sm-10')
          p
            strong=  'Fields marked with * are required'

      div(class='form-group')
        div(class='col-sm-offset-2 col-sm-10')
          input(
            type='submit'
            value='Submit'
            onclick='return checkInput()'
            class='btn btn-default'
          )
