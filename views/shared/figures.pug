p(class='bg-info')
  strong Total Revenue:
  text $
  text= figures.revenue

  br
  strong Total Expenditure:
  text $
  text= figures.expenditure

  br
  strong Total Events:
  text= figures.event

p
  h3 Amount of mail
  div(class='table-responsive')
    table(class='table table-hover table-condensed')
      tr
        th= 'From-To'
        th= 'Total Volume (cubic centimetre)'
        th= 'Total Weight (gram)'
        th= 'Total Items'

      for instance in figures.mail
        tr
          for property in instance
            td= property


p
  h3 Average Delivery Times and Critical Routes
  div(class='table-responsive')
    table(class='table table-hover table-condensed')
      tr
        th= 'From-To'
        th= 'Total Expenditure $'
        th= 'Total Revenue $'
        th= 'Total Price to Cost Difference $'
        th= 'Total Duration (days)'
        th= 'Total Items'
        th= 'Average Expenditure $'
        th= 'Average Revenue $'
        th= 'Average Delivery (days)'
        th= 'Price to Cost Ratio $'
        th= 'Critical?'

      for instance in figures.routes
        tr
          for property in instance
            td= property

p
  - var current = parseInt(limit);
  - var maximum = parseInt(max);
  if (current > 0)
    a(href='/main?ID='+(current-1))
      button(type='button' class='btn btn-primary') Step Back to Previous Event

  if (current < maximum)
    a(href='/main?ID='+(current+1))
      button(type='button' class='btn btn-primary') Go Forward to Next Event
